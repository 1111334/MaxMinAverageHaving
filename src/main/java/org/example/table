CREATE TABLE MEAL_ORDER(
TIME_MEAL_ORDERED TIMESTAMP,
  MEAL_NAME VARCHAR(255),
  NUMBER INT(10),
  PRICE FLOAT(20),
  CALORIES INT(20)
);

