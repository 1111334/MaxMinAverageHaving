INSERT INTO MEAL_ORDER(TIME_MEAL_ORDERED, MEAL_NAME, NUMBER, PRICE, CALORIES)
VALUES(DATE_ADD(NOW(), INTERVAL 7 HOUR), 'Pesto Pasta', 2, 12.00, 550);


SELECT MAX(PRICE)
FROM MEAL_ORDER
WHERE CALORIES > 500;

SELECT AVG(CALORIES)
FROM MEAL_ORDER
WHERE PRICE > 15;

SELECT * FROM MEAL_ORDER
HAVING PRICE = (SELECT MAX(PRICE) FROM MEAL_ORDER);

SELECT * FROM MEAL_ORDER
HAVING PRICE < (SELECT AVG(PRICE) FROM MEAL_ORDER);

SELECT * FROM MEAL_ORDER
WHERE PRICE < (SELECT AVG(PRICE) FROM MEAL_ORDER)
AND CALORIES > 600;
